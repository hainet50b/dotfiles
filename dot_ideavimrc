" Search and Highlight
set incsearch
set ignorecase
set smartcase
nnoremap <Esc><Esc> :nohlsearch<CR>

" Clipboard
set clipboard=unnamedplus
Plug 'machakann/vim-highlightedyank'
let g:highlightedyank_highlight_duration = "100"

" Extend Vim text objects with Vim AnyObject
" https://plugins.jetbrains.com/plugin/28333-vim-anyobject
set anyobject

" Mode
inoremap fd <Esc>

" IdeaVim
nnoremap <Space><Space>x :action IdeaVim.ReloadVimRc.reload<CR>

" Language
nnoremap <Space>fo :action ReformatCode<CR>

" Tab
nnoremap <Space>wl :action MoveTabRight<CR>
nnoremap <Space>wj :action MoveTabDown<CR>
nnoremap <Space>wo :action MoveEditorToOppositeTabGroup<CR>

" Terminal
nnoremap <Space>tt :action ActivateTerminalToolWindow<CR>
" Also defined in IDE keymap settings
" nnoremap <C-@> :action ActivateTerminalToolWindow<CR>

" Search
nnoremap <Space>fe :edit ~/.ideavimrc<CR>
nnoremap <Space>fs :action ShowSettings<CR>
nnoremap <Space>fa :action SearchEverywhere<CR>
nnoremap <Space>ff :action GotoFile<CR>
nnoremap <Space>gf :action FindInPath<CR>

